<div class="col-3 offset-7 px-1 bg-light position-fixed pt-5 pl-5 pr-4" id="sticky-sidebar">
<h6 class="border-bottom pb-3">WHO TO FOLLOW</h6>

    <% @not_following.each do |not_following| %>
    <div class="d-flex flex-row align-items-center mt-3 mb-4 who-to-follow">
            <div class="author"><img src="<%= not_following.photo %>" class="pr-2 rounded-circle" alt="<%= not_following.username %>"></div>
            <div class="follow-content">
                <h6><strong>
                 <%= link_to not_following.fullname, profile_path(not_following.username), class: "text-dark" %>
                 </strong></h6>
                <% if not_following.followers.count > 0 %>
                <small class="text-gray">Followed by  
                    <%= link_to not_following.followers.first.fullname, profile_path(not_following.followers.first.username) %>
                </small>
                <% else %>
                <small class="text-gray">No Followers</small>
                <% end %>
            </div>
    </div>
    <% end %>


    <div class="account-type">
        <small class="text-gray">
            <a href="#">Popular accounts</a> |
            <a href="#">Find friends</a>
        </small>
    </div>

    <h6 class="text-gray border-top border-bottom pt-3 pb-3 mt-3 mb-3">TRENDING</h6>

    <p><a href="#" class="text-gray"> #remotework </a></p>
    <p><a href="#" class="text-gray"> Education </a></p>
    <p><a href="#" class="text-gray"> #blacklivesmatter </a></p>
    <p><a href="#" class="text-gray"> Jacob Blake </a></p>
    
</div>