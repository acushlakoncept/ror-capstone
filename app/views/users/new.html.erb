<h1 class="text-center">Create Account</h1>

<% @user.errors.messages.values.each do |message| %>
  <%  message.each do |m| %>
  <div class="alert alert-danger alert-dismissible">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <%= m %>
  </div>
  <% end %>
<% end %>

<%= form_for(@user) do |f| %>
  <div class="form-group">
     <%= f.text_field :username, autofocus: true, placeholder: "Enter a username", class: "form-control"  %>
 </div>

<div class="form-group">
     <%= f.text_field :fullname, placeholder: "Enter Fullname", class: "form-control"  %>
 </div>
 <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
    <small>Already have an account?</small> <%= link_to 'Sign in', login_path %>
</div>
<% end %>



